	"add a shebang": {       
		        "prefix": "shebang", 			  
		        "body": [ 			  
		        "#!/bin/bash" 			  
		        ], 			  
		        "description": "Add shebang to script" 			  
		} 

		"Variable Yellow": {       
			        "prefix": "yellow", 			  
			        "body": [ 			  
			        "yellow=33[33" 			  
			        ], 			  
			        "description": "Add Variable for Yellow" 			  
			} 	


		"Add Case Statement": { 
			"scope": "sh",
			"prefix": "case", 			  
			"body": [ 			  
				"case $var in",
					"{testitems} )",
						"# code if match",
						";;"
					"{testitems} )",
						"# code if match",
						";;"
					"{testitems} )",
						"# code if match",
						";;"
					"*) # default case",
						"# code if default case",
						";;",
					"esac",
			],
			"description": "Adds Case Statement Structure"
								  
		} 	
			 
